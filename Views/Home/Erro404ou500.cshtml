@{
    int errorCode = ViewBag.StatusCode;
    ViewData["Title"] = "Erro "+errorCode;
}

<div class="container">
    <div class="row">

        <div class="col text-center">

            @if(errorCode == 404)
            {
                <h1>Página não encontrada</h1>
                <h3>Ops, parece que a página que você está tentando acessar não existe!</h3>
            } else 
            {
                <h1>Ocorreu um erro interno.</h1>
                <h3>Tente novamente mais tarde</h3>
            }
            <button><a style="color: #fff;" asp-area="" asp-controller="Home" asp-action="Index">Ir para a página inicial</a></button>
        </div>
    </div>
</div>