@using CargaHorariaCRUD.Models.Models
@model IEnumerable<EnvioModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Recebidos";
}

<link rel="stylesheet" href="https://cdn.datatables.net/2.0.3/css/dataTables.dataTables.css" />
<div class="container">
@if (Model != null && Model.Any())
{
    <h2 class="display-6 mb-3"><strong>Comprovantes recebidos</strong></h2>
        <table id="recebidos">
        <thead>
            <th>Tipo</th>
            <th>Professor Responsável</th>
            <th>Observação</th>
            <th>Data Enviada</th>
            <th>Comprovante</th>
            <th>Validado</th>
        </thead>
        <tbody>
            @foreach(var envio in Model)
            {
                <tr>
                    <td>@envio.Tipo</td>
                    <td>@envio.Prof</td>
                    <td>@envio.Obs</td>
                    <td>@envio.HorarioEnviado.ToString()</td>
                    <td><a href="../@envio.Path" style="color: blue !important;" target='_blank' rel='noopener noreferrer'>Ver comprovante</a> </td>
                    <td>
                        @if(envio.Validado)
                        {
                            <span style='color: green;'>
                                <strong>Validado! Total: @envio.CargaHorariaEmHorasF() horas </strong>
                            </span>
                        } else
                        {
                            <span style='color: red;'>
                                <strong>Não validado</strong>
                            </span>
                        }
                    </td>
                </tr>
            }

        </tbody>
    </table>
} else
{
    <h1>Nenhum comprovante foi enviado ainda</h1>
}
</div>
